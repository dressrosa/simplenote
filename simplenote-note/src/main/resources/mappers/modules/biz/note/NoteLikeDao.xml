<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyu.simplenote.modules.biz.note.dao.NoteLikeDao">

    <select id="get" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike"
        resultType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike">
        select
        a.num as num,
        a.note_id as noteId,
        a.user_id as userId,
        a.status as status
        from biz_note_like as a
        where
        a.user_id = #{userId}
        and a.note_id =
        #{noteId}
    </select>

    <select id="findByList" resultType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike"
        parameterType="com.xiaoyu.common.base.CommonQuery">
        select
        a.note_id as noteId,
        a.user_id as userId,
        a.status as status
        from biz_note_like as a
        where a.del_flag=0
        <if test="userId != null">
            and a.user_id=#{userId}
        </if>
        <if test="bizIds != null">
            and a.note_id in
            <foreach collection="bizIds" item="item" index="index" open="(" close=")"
                separator=",">
                #{item}
            </foreach>
        </if>
        <if test="userId != null">
            and a.user_id = #{userId}
        </if>
    </select>

    <insert id="insert" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike">
        insert into biz_note_like
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                uuid,
            </if>
            <if test="noteId != null">
                note_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="num != null">
                num,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                #{uuid},
            </if>
            <if test="noteId != null">
                #{noteId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="num != null">
                #{num},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike">
        update biz_note_like
        <set>
            <if test="num != null">
                num = #{num},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where
        note_id = #{noteId}
        and user_id =#{userId}
    </update>

    <select id="isExist" resultType="java.lang.Integer"
        parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.NoteLike">
        select count(*)
        from biz_note_like
        where
        note_id = #{noteId}
        and user_id
        =#{userId}
    </select>

</mapper>