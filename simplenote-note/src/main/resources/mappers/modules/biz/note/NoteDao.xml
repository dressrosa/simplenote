<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyu.simplenote.modules.biz.note.dao.NoteDao">
    <sql id="Base_Column_List">
        a.id as id,
        a.uuid as uuid,
        a.user_id as userId,
        a.content as content,
        a.location as
        location,
        a.create_date as createDate
    </sql>

    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from biz_note
        where del_flag=0
    </select>

    <select id="get" resultType="com.xiaoyu.simplenote.modules.biz.note.entity.Note"
        parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        select
        <include refid="Base_Column_List" />
        from biz_note as a
        where a.uuid = #{uuid}
        and a.del_flag=0
    </select>

    <select id="getById" parameterType="java.lang.String"
        resultType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        select
        <include refid="Base_Column_List" />
        from
        biz_note as a
        where a.id = #{id}
        and a.del_flag=0
    </select>

    <select id="getByUuid" parameterType="java.lang.String"
        resultType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        select
        <include refid="Base_Column_List" />
        from
        biz_note as a
        where
        a.uuid = #{uuid}
        and a.del_flag=0
    </select>

    <select id="findByList" resultType="com.xiaoyu.simplenote.modules.biz.note.entity.Note"
        parameterType="com.xiaoyu.common.base.CommonQuery">
        select
        <include refid="Base_Column_List" />
        from biz_note as a
        where a.del_flag=0
        <if test="userId != null">
            and a.user_id=#{userId}
        </if>
        <if test="bizIds != null">
            and a.note_id in
            <foreach collection="bizIds" item="item" index="index" open="(" close=")"
                separator=",">
                #{item}
            </foreach>
        </if>
        order by a.create_date desc
    </select>

    <delete id="delete" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        update biz_note set
        del_flag=1
        where uuid = #{uuid}
    </delete>

    <insert id="insert" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        set names utf8mb4;
        insert into biz_note
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                uuid,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="location != null">
                location,
            </if>
            <if test="createDate != null">
                create_date,
            </if>
            <if test="updateDate != null">
                update_date,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                #{uuid},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="content != null">
                #{content},
            </if>
            <if test="location != null">
                #{location},
            </if>
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="updateDate != null">
                #{updateDate},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.xiaoyu.simplenote.modules.biz.note.entity.Note">
        update biz_note
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

    <select id="isExist" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*)
        from
        biz_note
        where uuid=#{uuid}
        and del_flag=0
    </select>

</mapper>