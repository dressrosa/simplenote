<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyu.modules.biz.article.dao.ArticleColumnDao">
    <sql id="Base_Column_List">
        a.id as id,
        a.uuid as uuid,
        a.user_id as userId,
        a.name as name,
        a.is_open as is_open,
        a.create_date as createDate
    </sql>

    <select id="get" resultType="com.xiaoyu.modules.biz.article.entity.ArticleColumn"
        parameterType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        select
        <include refid="Base_Column_List" />
        from biz_article_column as a
        where a.uuid = #{uuid}
        and a.del_flag=0
    </select>

    <select id="getById" parameterType="java.lang.String"
        resultType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        select
        <include refid="Base_Column_List" />
        from
        biz_article_column as a
        where a.id = #{id}
        and a.del_flag=0
    </select>

    <select id="getByUuid" parameterType="java.lang.String"
        resultType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        select
        <include refid="Base_Column_List" />
        from
        biz_article_column as a
        where
        a.uuid = #{uuid}
        and a.del_flag=0
    </select>

    <select id="getVoByUuid" parameterType="java.lang.String"
        resultType="com.xiaoyu.modules.biz.article.vo.ArticleVo">
        select
        <include refid="Base_Column_List" />
        ,t.nick_name as userName
        from
        biz_article_column as a
        join
        biz_user as t
        on
        t.user_id=a.user_id
        where
        a.uuid = #{uuid}
        and
        a.del_flag=0
    </select>

    <select id="count" parameterType="com.xiaoyu.modules.biz.article.entity.ArticleColumn"
        resultType="java.lang.Integer">
        select
        count(*)
        from
        biz_article_column as a
        where
        a.user_id = #{userId}
        and
        a.del_flag=0
    </select>

    <select id="findByList" resultType="com.xiaoyu.modules.biz.article.entity.ArticleColumn"
        parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from biz_article_column as a
        where a.del_flag=0
        <if test="userId != null">
            and a.user_id=#{userId}
        </if>
        <if test="isOpen != null">
            and a.is_open=#{isOpen}
        </if>
        order by a.create_date desc
    </select>

    <delete id="delete" parameterType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        update biz_article_column set
        del_flag=1
        where uuid =
        #{uuid}
        and user_id = #{userId}
    </delete>

    <insert id="insert" parameterType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        insert into biz_article_column
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                uuid,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="isOpen != null">
                is_open,
            </if>
            <if test="createDate != null">
                create_date,
            </if>
            <if test="updateDate != null">
                update_date,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                #{uuid},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="isOpen != null">
                #{isOpen},
            </if>
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="updateDate != null">
                #{updateDate},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="com.xiaoyu.modules.biz.article.entity.ArticleColumn">
        update biz_article_column
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updateDate != null">
                update_date = #{updateDate},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="isOpen != null">
                is_open = #{isOpen},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

</mapper>