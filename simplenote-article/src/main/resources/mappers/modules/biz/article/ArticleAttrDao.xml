<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoyu.simplenote.modules.biz.article.dao.ArticleAttrDao">
    <sql id="Base_Column_List">
        a.id as id,
        a.uuid as uuid,
        a.article_id as articleId,
        a.read_num as readNum,
        a.comment_num as commentNum,
        a.like_num as likeNum,
        a.collect_num as collectNum
    </sql>

    <select id="get" resultType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr"
        parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        select
        <include refid="Base_Column_List" />
        from biz_article_attr as a
        where a.uuid = #{uuid} and
        a.del_flag=0
    </select>

    <select id="getByArticleId" parameterType="java.lang.String"
        resultType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        select
        <include refid="Base_Column_List" />
        from biz_article_attr as a
        where a.article_id = #{articleId}
        and a.del_flag=0
    </select>

    <!-- 分页查询用户信息 -->
    <select id="findByList" resultType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr"
        parameterType="com.xiaoyu.common.base.CommonQuery">
        select
        <include refid="Base_Column_List" />
        from biz_article_attr as a
        where a.del_flag=0
    </select>

    <delete id="delete" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr set
        del_flag=1
        where
        uuid =#{uuid}
    </delete>


    <insert id="insert" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        insert into biz_article_attr
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                uuid,
            </if>
            <if test="articleId != null">
                article_id,
            </if>
            <if test="readNum != null">
                read_num,
            </if>
            <if test="likeNum != null">
                like_num,
            </if>
            <if test="collectNum != null">
                collect_num,
            </if>
            <if test="createDate != null">
                create_date,
            </if>
            <if test="updateDate != null">
                update_date,
            </if>
            <if test="delFlag != null">
                del_flag,
            </if>
            <if test="commentNum != null">
                commentNum,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uuid != null">
                #{uuid},
            </if>
            <if test="articleId != null">
                #{articleId},
            </if>
            <if test="readNum != null">
                #{readNum},
            </if>
            <if test="likeNum != null">
                #{likeNum},
            </if>
            <if test="collectNum != null">
                #{collectNum},
            </if>
            <if test="createDate != null">
                #{createDate},
            </if>
            <if test="updateDate != null">
                #{updateDate},
            </if>
            <if test="delFlag != null">
                #{delFlag},
            </if>
            <if test="commentNum != null">
                #{commentNum},
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr
        <set>
            <if test="readNum != null">
                read_num = #{readNum},
            </if>
            <if test="likeNum != null">
                like_num = #{likeNum},
            </if>
            <if test="collectNum != null">
                collect_num = #{collectNum},
            </if>
            <if test="commentNum != null">
                comment_num = #{commentNum},
            </if>
        </set>
        where article_id= #{articleId}
    </update>
    
    <update id="updateOptimistic" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr
        <set>
            <if test="readNum != null">
                read_num = #{readNum},
            </if>
            <if test="likeNum != null">
                like_num = #{likeNum},
            </if>
            <if test="collectNum != null">
                collect_num = #{collectNum},
            </if>
            <if test="commentNum != null">
                comment_num = #{commentNum},
            </if>
        </set>
        where article_id= #{articleId}
        and
        <if test="readNum != null">
            read_num = #{old}
        </if>
        <if test="likeNum != null">
            like_num = #{old}
        </if>
        <if test="collectNum != null">
            collect_num = #{old}
        </if>
        <if test="commentNum != null">
            comment_num = #{old}
        </if>
    </update>
    
    <update id="updateByAddition" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        update biz_article_attr
        <set>
            <if test="readNum != null">
                read_num = read_num+#{readNum},
            </if>
            <if test="likeNum != null">
                like_num = like_num+#{likeNum},
            </if>
            <if test="collectNum != null">
                collect_num = collect_num+#{collectNum},
            </if>
            <if test="commentNum != null">
                comment_num = comment_num+#{commentNum},
            </if>
        </set>
        where article_id= #{articleId}
    </update>

    <select id="isExist" parameterType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr"
        resultType="java.lang.Integer">
        select count(*) from biz_article_attr
        where del_flag=0
        <if test="uuid != null">
            and uuid=#{uuid}
        </if>
        <if test="articleId != null">
            and article_id = #{articleId}
        </if>

    </select>

    <select id="getForUpdate" parameterType="java.lang.String"
        resultType="com.xiaoyu.simplenote.modules.biz.article.entity.ArticleAttr">
        select * from biz_article_attr
        where
        article_id=#{articleId}
        for update
    </select>
</mapper>